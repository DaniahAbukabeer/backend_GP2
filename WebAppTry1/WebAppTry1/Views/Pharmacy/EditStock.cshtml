                            @*<td class="col-1">@(product.PublicPrice.ToString() ?? "N/A")</td>*@
                            <td class="col-1"><a class="btn btn-dark form control" asp-action="Selling" asp-controller="Pharmacy" asp-route-Id="@product.Id">Edit</a></td>
                    </tr>
                    }
                </tbody>
                <!--Table body-->
            </table>
            <!--Table-->
