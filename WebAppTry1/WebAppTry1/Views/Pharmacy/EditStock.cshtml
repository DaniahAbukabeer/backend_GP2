}
<h1>@ViewData["Title"]</h1>
<hr />
<h4>current pharmacy name</h4>
<div class="row my-3 mx-2">
    <div class="col-lg-8">
        <input style="display:inline;" class="form-control mr-sm-2 mb-2" type="search"
